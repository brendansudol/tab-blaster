{
  "name": "Tab Blaster",
  "description": "You get 10 tabs to use, a nice and fair round number. After that, your oldest one gets blasted away.",
  "version": "0.0.2",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["tabs"],
  "manifest_version": 2
}
